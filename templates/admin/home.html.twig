{% extends 'base_admin.html.twig' %}

{% block body %}
    <h1>Gestion du questionnaire</h1>
    <div class="col-sm-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>Les thématiques</h3>
                <a href="{{ path('admin_add_thematique') }}" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter</a>
                <table class="table-responsive table table-hover">
                    <thead>
                    <tr>
                        <th>Ordre</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for thematique in thematiques %}
                        <tr>
                            <td>{{ thematique.ordre }}</td>
                            <td>{{ thematique.nom }}</td>
                            <td><a href="{{ path("admin_update_thematique", { 'thematique' : thematique.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> <a href="{{ path("admin_remove_thematique", { 'thematique' : thematique.id }) }}" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>Les questions simples</h3>
                <br \>
                <h4>Sans Filtres</h4>
                <p><a href="{{ path('admin_add_qosf') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter une question avec réponse ouverte</a></p>
                <br \>
                <p><a href="{{ path('admin_add_qfsf') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter une question avec réponse fermée</a></p>
                <br \>
                <h4>Avec Filtres</h4>
                <p><a href="{{ path('admin_add_thematique') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter une question avec réponse ouverte</a></p>
                <br \>
                <p><a href="{{ path('admin_add_thematique') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter une question avec réponse fermée</a></p>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>Les sous-questions</h3>
                <p><a href="{{ path('admin_add_sqosf') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter une sous-question avec réponse ouverte</a></p>
                <br \>
                <p><a href="{{ path('admin_add_thematique') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter une sous-question avec réponse fermée</a></p>
                <br \>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>Les réponses reçues</h3>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="thumbnail">
            <div class="caption">
                <h3>Les questions déjà encodées</h3>
                <table class="table-responsive table table-hover">
                    <thead>
                    <tr>
                        <th>Ordre</th>
                        <th>Question</th>
                        <th>Thématique</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for question in questions %}
                        <tr>
                            <td>{{ question.ordre }}</td>
                            <td>{{ question.question }}</td>
                            <td>{{ question.thematique.nom }}</td>
                       </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}