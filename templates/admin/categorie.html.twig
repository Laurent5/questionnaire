{% extends 'base_admin.html.twig' %}

{% block body %}
<h1>Détail de la catégorie '{{ categorie.categorie }}'</h1>
<p>Voici les réponses fournies</p>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Questionnaire</th>
        <th>Réponse</th>
        <th>Catégorisation</th>
    </tr>
    </thead>
    <tbody>
    {% for reponse in categorie.reponsesFournies %}
    <tr>
        <td><a href="{{ path('admin_reponses_by_questionnaire', { 'questionnaire' : reponse.questionnaire.id }) }}">{{ reponse.questionnaire.questionnaireId }}</a></td>
        <td>{{ reponse.valeur }}</td>
        <td>
            <ul>
                {% for categorie in reponse.categories %}
                    <li>{{ categorie.categorie }} <a href="{{ path('admin_update_categories_redirect_to_route', { 'reponse' :reponse.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></li>
                {% endfor %}
            </ul>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}