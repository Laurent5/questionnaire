{% extends 'base_admin.html.twig' %}

{% block body %}
    <h1>{{ question.ordre }}) - {{ question.question }}</h1>

    {% if question.categories|length > 0 %}
        <h2>Catégorisation(s) existante(s)</h2>
        <table class="table table-responsive">
            <thead>
            <tr>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for categorie in question.categories %}
                <tr>
                    <td>{{ categorie.categorie }}</td>
                    <td>
                        <a href="{{ path("admin_update_categorisation", { 'question' : question.id, 'categorisation' : categorie.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ path("admin_delete_categorisation", { 'categorisation' : categorie.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <h2>Ajout/Modification des catégories liées à la question</h2>
    {{ form(form) }}
{% endblock %}